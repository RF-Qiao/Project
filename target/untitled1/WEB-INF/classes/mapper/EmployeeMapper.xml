<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feng.dao.EmployeeMapper">
    <select id="findAllEmployee" resultType="com.feng.pojo.Employee" flushCache="true">
        select
            id, username,  mobile, gender, birthday, created_time, role
            from project_one.users
        where Role=0
    </select>

    <insert id="addEmployee" parameterType="com.feng.pojo.Employee" flushCache="true">
        insert into
            project_one.users (id,username,password,gender,mobile,birthday,created_time)
        values
            (null,#{username},#{password},#{gender},#{mobile},#{birthday},#{created_time});
    </insert>

    <delete id="deleteEmployee" flushCache="true" >
        delete from
        project_one.users
        where
              id=#{id}
    </delete>

    <update id="updateEmployee" parameterType="com.feng.pojo.Employee" flushCache="true">
        update project_one.users
            <set>
                <if test="username!=null">
                    username=#{username},
                </if>
                <if test="password!=null">
                    password = #{password},
                </if>
                <if test="gender!=null">
                    gender=#{gender},
                </if>
                <if test="mobile!=null">
                    mobile=#{mobile},
                </if>
                <if test="birthday!=null">
                    birthday=#{birthday},
                </if>
                <if test="created_time!=null">
                    created_time=#{created_time},
                </if>
            </set>
        where id=#{id};
    </update>

    <insert id="registEmployee" parameterType="com.feng.pojo.Employee" flushCache="true">
        insert into
            project_one.users(id,username,password)
        values
            (null,#{username},#{password});
    </insert>

    <select id="login" resultType="com.feng.pojo.Employee" flushCache="true">
        SELECT username, password ,role FROM project_one.users WHERE
                username = #{username} AND password=#{password}
    </select>

    <select id="usernameIsExist" resultType="Integer" flushCache="true">
        select count(username)
        from project_one.users
        where (username=#{username})
    </select>

    <select id="userAndPasswordIsExist" resultType="Integer" flushCache="true">
        select count(*) from project_one.users
        where username=#{username} and password =#{password};
    </select>
</mapper>